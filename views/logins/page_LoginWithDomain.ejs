<!DOCTYPE html>
<html>
<head>
    <% include ../partials/head %>
</head>

<body class="hm">
    <main class="hm-main-view">
        <section class="ml-auto mr-auto hm-max-w-500 px-3">
            <div class="mt-5">
                <div class="text-center"> 
                <% if(logo != '') { %> 
                    <img src="<%= baseUrl %>/img/company-logo.png" alt="" height="32">
                <% } %>
                </div>
                <h3 class="text-center">
                   <%= companyUrl %>
                </h3> 
            </div>
            
            <div class="card p-4">
                <div class="row no-gutters">
                    <div class="hm-col">
                        <h3 class="text-uppercase hm-mr-0">
                           login
                        </h3>
                    </div>
                    <div class="pl-3">
                        <a href="">
                            <img src="<%= baseUrl %>/img/logo.png" alt="" height="21">
                        </a>
                    </div>
                </div>
                
                <div id="loginForm">
                    <div class="">
                        <div class="form-group">
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">
                                        <i class="material-icons">mail</i>
                                    </span>
                                </div>
                                <input type="email" class="form-control" placeholder="Email" name="email" getData="getData" required="" id="email">
                            </div>
                            <div class="hm-input-error-msg">
                                Required Field!
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">
                                        <i class="material-icons">lock_outline</i>
                                    </span>
                                </div>
                                <input type="password" class="form-control" placeholder="Password" name="password" getData required="" id="password">
                            </div>
                            <div class="hm-input-error-msg">
                                Required Field!
                            </div>
                        </div>
                    </div>
                    <div class="mt-4 ">
                        <div class="row no-gutters">
                            <div class="hm-col">
                                <div class="form-check">
                                    <label class="form-check-label">
                                        <input class="form-check-input" type="checkbox" value="" id="remember_me" checked> Remember me
                                        <span class="form-check-sign">
                                            <span class="check"></span>
                                        </span>
                                    </label>
                                </div>
                            </div>
                            <div class="pl-3">
                                <button type="button" class="btn btn-primary " id="loginButton" onclick="login('#loginForm')">
                                    Login
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            
            </div>
            <div class="row no-gutters">
                <div class="col  pr-3">
                    <a href="#" class="text-muted" onclick="forgetPasswordForm();">Forgot Your Password?</a> 
                </div>
                <div class="">
                        <a href="#" class="text-muted" onclick="switchEmployeeRegisterForm();">Employee Registration <i class="material-icons">arrow_right</i></a>
                </div>
            </div>
        </section>
    </main>
    <footer>
        <% include ../partials/footer %>
        <% include js/loginJs %>
        <script>
                $('#password').keydown(function(event){
                    var keyCode = (event.keyCode ? event.keyCode : event.which);
                    if (keyCode == 13) {
                        $('#loginButton').click();
                    }
                });
        </script>
    </footer>
</body>
</html>
