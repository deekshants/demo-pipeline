<section id="timesheetWidgetWarpper">
    <div class="card hm-tmr-0 hm-widget-warpper">
        <div class="hm-widget-color-bar" style="background: darkturquoise;"></div>
        <div class=" px-3 pt-2 animate-wrapper">
            <h4 class="title hm-mr-0 animate-fade-left">
                Quick Timesheet
            </h4>
        </div>
        <div class="p-3 hm-widget-content">
            <div class="form-group">
                <label for="" class="">Project</label>
                <select id="" class="form-control">
                    <option>Select</option>
                    <option value="">...</option>
                </select>
            </div>
            <div class="form-group">
                <label for="" class="">Task</label>
                <select id="" class="form-control">
                    <option>Select</option>
                    <option value="">...</option>
                </select>
            </div>
            <div class="row">
                <div class="col-12 col-md-8">
                    <div class="row no-gutters">
                        <div class="pr-3">
                            <label for="" class="pt-2"><sup class="text-danger">*</sup>Time (HH:MM)</label>
                        </div>
                        <div class="hm-col">
                            <div class="form-group hm-tpd-0">
                                <input type="time" class="form-control" required="">
                                <div class="hm-input-error-msg">
                                    Required Field!
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-12 col-md-4">
                    <div class="form-check">
                        <label class="form-check-label">
                            <input class="form-check-input" type="checkbox" value="">
                            Billable
                            <span class="form-check-sign">
                                <span class="check"></span>
                            </span>
                        </label>
                    </div>
                </div>
            </div>
            <div class="form-group hide" id="qckTsheetComment">
                <label for="" class="">Comment</label>
                <textarea class="form-control" id=""></textarea>
            </div>
            <div class="">
                <div class="row no-gutters align-items-center">
                    <div class="hm-col">
                        <div id="qckTsheetCommentLink">
                            <a href="#" class="hm-text-size-12" onclick="hmToggleView('#qckTsheetCommentLink', '#qckTsheetComment')">Add Comment</a>
                        </div>
                    </div>
                    <div class="pl-3">
                        <button type="button" class="btn btn-sm btn-white" onclick="dummySuccessToastAuto('Timesheet Save Successfully !')">
                            Save
                        </button>
                        <button type="button" class="btn btn-sm btn-primary" onclick="dummySuccessToastAuto('Timesheet Submitted for Approval Successfully !')">
                            Submit
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>