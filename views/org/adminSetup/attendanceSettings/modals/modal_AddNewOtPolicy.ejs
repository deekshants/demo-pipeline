<section class="hm-side-panel-wrapper " id="panelAddNewOtPolicy">
    <div class="hm-side-panel ">
        <header class="hm-side-panel-header border-bottom">
            <div class="row no-gutters px-3">
                <div class="pt-2 pr-2">
                    <i class="material-icons">add</i>
                </div>
                <div class="hm-col">
                    <h4 class="hm-text-normal">Add New Over Time Policy</h4>
                </div>
                <div class="pl-3">
                    <button class="btn  btn-fab btn-link btn-round" onclick="closeSidePanel('#panelAddNewOtPolicy');">
                        <i class="material-icons">close</i>
                    </button>
                </div>
            </div>
        </header>
        <div class="hm-side-panel-body  px-4">
            <div class="hm-wizard-wrapper " style="height: 100%;" id="otPolicyWizard">
                <div class="row" style="height: 100%;">
                    <div class="col-12 col-md-3 border-right">
                        <div class="hm-wizard-step-wrapper hm-step-vertical">
                            <div class="hm-wizard-step active" hm-direct-step="wizard" hm-step="1" hm-hook="click" hm-action="hmWizardDirectStep">
                                <div class="hm-wizard-step-inner">
                                    <div class="hm-wizard-step-count mr-2">
                                        1
                                    </div>
                                    <div class="hm-wizard-step-check mr-2">
                                        <i class="material-icons">check</i>
                                    </div>
                                    <div class="hm-wizard-step-text">
                                        Basic Info  
                                    </div>
                                </div>
                            </div> 

                            <div class="hm-wizard-step " hm-direct-step="wizard" hm-step="2" hm-hook="click" hm-action="hmWizardDirectStep">
                                <div class="hm-wizard-step-inner">
                                    <div class="hm-wizard-step-count mr-2">
                                        2
                                    </div>
                                    <div class="hm-wizard-step-check mr-2">
                                        <i class="material-icons">check</i>
                                    </div>
                                    <div class="hm-wizard-step-text">
                                        Aplicable Days
                                    </div>
                                </div>
                            </div> 
                            <div class="hm-wizard-step" hm-direct-step="wizard" hm-step="3" hm-hook="click" hm-action="hmWizardDirectStep">
                                <div class="hm-wizard-step-inner">
                                    <div class="hm-wizard-step-count mr-2">
                                        3
                                    </div>
                                    <div class="hm-wizard-step-check mr-2">
                                        <i class="material-icons">check</i>
                                    </div>
                                    <div class="hm-wizard-step-text">
                                        Approval
                                    </div>
                                </div>
                            </div>
                           
                        </div>
                    </div>

                    <div class="col-12 col-md-9 ">
                        <div class="hm-wizard-content-wrapper">
                            
                            <section class="hm-step-content active" hm-step-content="1">
                                <div class="px-3">
                                    <h3>
                                        Basic Info
                                    </h3>
                                    <div>
                                        <div class="form-group">
                                            <label for=""><sup class="text-danger">*</sup>Title</label>
                                            <input type="text" class="form-control" id="" required="">
                                            <div class="hm-input-error-msg">
                                                Required Field!
                                            </div>
                                        </div>
                                        
                                        <div class="form-group">
                                            <label for="">Description</label>
                                            <textarea class="form-control" id="" rows="1"></textarea>
                                        </div>
                                        <div>
                                            <button type="button" class="btn btn-primary" onclick="hmWizardJumpStep({wrapperId : '#otPolicyWizard', step : 2});">
                                                Next
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </section>


                            <section class="hm-step-content " hm-step-content="2">
                                <div class="px-3">
                                    <h3>
                                        Aplicable Days
                                    </h3>

                                     <div class="mb-4">
                                        <p class="py-3">
                                            Overtime (OT) applicable for following days?
                                        </p>
                                        <div class="">
                                            <div class="form-check pb-3">
                                                <label class="form-check-label">
                                                    <input class="form-check-input" type="checkbox" value="">
                                                    Regular working days: consider work beyond shift duration as OT.
                                                    <span class="form-check-sign">
                                                        <span class="check"></span>
                                                    </span>
                                                </label>
                                            </div>
                                            <div class="form-check pb-3">
                                                <label class="form-check-label">
                                                    <input class="form-check-input" type="checkbox" value="">
                                                    Weekoffs: consider all work hours as OT.
                                                    <span class="form-check-sign">
                                                        <span class="check"></span>
                                                    </span>
                                                </label>
                                            </div>
                                            <div class="form-check pb-3">
                                                <label class="form-check-label">
                                                    <input class="form-check-input" type="checkbox" value="">
                                                    Holidays: consider all work hours as OT.
                                                    <span class="form-check-sign">
                                                        <span class="check"></span>
                                                    </span>
                                                </label>
                                            </div>
                                        </div>
                                        
                                    </div>
                                    <div>
                                        <button type="button" class="btn btn-white" onclick="hmWizardJumpStep({wrapperId : '#otPolicyWizard', step : 1});">
                                            Previous
                                        </button>
                                        <button type="button" class="btn btn-primary" onclick="hmWizardJumpStep({wrapperId : '#otPolicyWizard', step : 3});">
                                            Next
                                        </button>
                                        
                                    </div>
                                </div>
                            </section>
                            <section class="hm-step-content " hm-step-content="3">
                                <div class="px-3">
                                    <h3>
                                        Approval
                                    </h3>
                                    <div class="mb-4">
                                        <div class="form-check py-3">
                                            <label class="form-check-label">
                                                <input class="form-check-input" type="checkbox" value="" hm-watch="checkbox" hm-extra-view="#otRule">
                                                Approval required for overtime request.
                                                <span class="form-check-sign">
                                                    <span class="check"></span>
                                                </span>
                                            </label>
                                        </div>

                                        <div class="hide pl-3" id="otRule">
                                            <div class="mb-4 ">
                                                <div class="row no-gutters align-items-end mb-2">
                                                    <div class="form-check">
                                                        <label class="form-check-label">
                                                            <input class="form-check-input" type="checkbox">
                                                            OT request should be submitted before
                                                            <span class="form-check-sign">
                                                                <span class="check"></span>
                                                            </span>
                                                        </label>
                                                    </div>
                                                    <div class="pl-3">
                                                        <input type="number" class="form-control" min="1" max="365" placeholder="0">
                                                    </div>
                                                    <p>
                                                        days.
                                                    </p>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="mb-4">
                                        <div class="row no-gutters align-items-end mb-2">
                                            <div class="form-check">
                                                <label class="form-check-label">
                                                    <input class="form-check-input" type="checkbox">
                                                    Maximum 
                                                    <span class="form-check-sign">
                                                        <span class="check"></span>
                                                    </span>
                                                </label>
                                            </div>
                                            <div class="pl-3">
                                                <input type="number" class="form-control" min="1" max="365" placeholder="0">
                                            </div>
                                            <p>
                                                OT can be availed in a
                                            </p>
                                            <div class="pl-3">
                                                <select id="" class="form-control">
                                                    <option>Week</option>
                                                    <option>Month</option>
                                                    <option>Year</option>
                                                </select>
                                            </div>
                                        </div>
                                    </div>
                                    
                                    <div>
                                        <div class="mt-4">
                                            <button type="button" class="btn btn-white" onclick="hmWizardJumpStep({wrapperId : '#otPolicyWizard', step : 2});">
                                                Previous
                                            </button>
                                            <button type="button" class="btn btn-primary" onclick="dummyPanelSave('Overtime Policy Added Successfully !', 'success', '#panelAddNewotPolicy')">
                                                Done
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </section>
                           
                            
                        </div>

                    </div>
                </div>
            </div>




        </div>

    </div>
</section>