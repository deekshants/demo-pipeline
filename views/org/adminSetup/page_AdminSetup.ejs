<!DOCTYPE html>
<html>
<head>
    <% include ../../partials/head %>
</head>

<body class="hm hm-has-top-menu hm-has-side-menu">
    <header>
        <% include ../../partials/header %>
    </header>
    <aside>
        <% include ../../partials/side-menu %>
    </aside>

    <main class="hm-main-view">
        <div class="p-3">   
            <div>
                <% include leaveHolidays/view_SetupHolidays %>
            </div>
            <div>
                <% include leaveHolidays/view_SetupLeaves %>
            </div>
            <section class="hm-tab-wrapper" id="entireAdminSetup">
                
                    <div class="row no-gutters">
                        <div class="pr-3" style="width: 250px;">
                            <div class="card pr-3 py-3 hm-tmr-0">
                                <div class="hm-tab-nav-wrapper">
                                    <% if(user.role.canView.includes('companySettings')){ %>
                                    <div class="hm-setup-menu-item hm-tab-link active" hmtab="setupCompanyInfo" hm-hook="click" hm-action="hmTab">
                                        <div class="hm-setup-menu-item-sub">   
                                            Company Settings
                                        </div> 
                                        <small> 
                                            General Info
                                        </small>
                                    </div>
                                    <% } %>
                                    <% if(user.role.canView.includes('leaveAndHolidays')){ %>
                                    <div class="hm-setup-menu-item hm-tab-link" hmtab="setupLeaves" hm-hook="click" hm-action="hmTab">
                                        <div class="hm-setup-menu-item-sub">   
                                            Leave & Holidays
                                        </div> 
                                        <small> 
                                            Plan Leaves and Holidays 
                                        </small>
                                    </div>
                                    <% } %>
                                    <% if(user.role.canView.includes('employeeSettings')){ %>
                                    <div class="hm-setup-menu-item hm-tab-link" hmtab="setupEmployee" hm-hook="click" hm-action="hmTab">
                                        <div class="hm-setup-menu-item-sub">   
                                            Employee Settings
                                        </div> 
                                        <small> 
                                            Manage Employee Settings
                                        </small>
                                    </div>
                                    <% } %>
                                    <% if(user.role.canView.includes('onboardingAndExit')){ %>
                                    <div class="hm-setup-menu-item hm-tab-link" hmtab="setupOnboardExit" hm-hook="click" hm-action="hmTab">
                                        <div class="hm-setup-menu-item-sub">   
                                            Onboarding & Exit
                                        </div> 
                                        <small> 
                                            Welcome and Re.targetaving
                                        </small>
                                    </div>
                                    <% } %>
                                    <% if(user.role.canView.includes('attendance')){ %>
                                    <div class="hm-setup-menu-item hm-tab-link" hmtab="setupAttendance" hm-hook="click" hm-action="hmTab">
                                        <div class="hm-setup-menu-item-sub">   
                                            Attendance
                                        </div> 
                                        <small> 
                                            Shift, Weekoff, Time Tracking
                                        </small>
                                    </div>
                                    <% } %>
                                    <div class="hm-setup-menu-item hm-under-const-light">
                                        <div class="hm-setup-menu-item-sub">   
                                            Payroll Setup
                                        </div> 
                                        <small> 
                                            Payment and pay slips settings
                                        </small>
                                    </div>
                                    <div class="hm-setup-menu-item hm-under-const-light">
                                        <div class="hm-setup-menu-item-sub">   
                                            Timesneet
                                        </div> 
                                        <small> 
                                            Manage Timesneet, Approval and Billing
                                        </small>
                                    </div>
                                    <% if(user.role.id == 1){ %>
                                    <div class="hm-setup-menu-item hm-tab-link" hmtab="setupRolesPermissions" hm-hook="click" hm-action="hmTab">
                                        <div class="hm-setup-menu-item-sub">   
                                            Roles & Permissions
                                        </div> 
                                        <small> 
                                            Manage roles and Permissions
                                        </small>
                                    </div>
                                    <% } %>
                                    <div class="hm-setup-menu-item hm-under-const-light">
                                        <div class="hm-setup-menu-item-sub">   
                                            Imports Data
                                        </div> 
                                        <small> 
                                            Import external data
                                        </small>
                                    </div>
                                </div>
                            </div>

                        </div>
                        <div class="hm-col">
                            <div class="hm-tab-content-wrapper">
                                <!-- company info -->
                                <% if(user.role.canView.includes('companySettings')){ %>
                                <div class="hm-tab-content active" hmtab="setupCompanyInfo">
                                    <% include company/view_CompanySetting %>
                                </div>
                                <% } %>
                                <!-- leaves -->
                                <% if(user.role.canView.includes('leaveAndHolidays')){ %>
                                <div class="hm-tab-content" hmtab="setupLeaves">
                                    <% include leaveHolidays/view_LeavesHolidays %>
                                </div>
                                <% } %>
                                <!-- setup employee -->
                                <% if(user.role.canView.includes('employeeSettings')){ %>
                                <div class="hm-tab-content" hmtab="setupEmployee">
                                    <% include employees/view_EmployeeSettings %>
                                </div>
                                <% } %>
                                <!-- setup OnboardingExit -->
                                <% if(user.role.canView.includes('onboardingAndExit')){ %>
                                <div class="hm-tab-content" hmtab="setupOnboardExit">
                                    <% include onboardingExit/view_OnboardExitSettings %>
                                </div>
                                <% } %>
                                <!-- setup attendance -->
                                <% if(user.role.canView.includes('attendance')){ %>
                                <div class="hm-tab-content" hmtab="setupAttendance">
                                    <% include attendanceSettings/view_Attendance %>
                                </div>
                                <% } %>
                                <!-- setup Roles and Permissions -->
                                <% if(user.role.id == 1){ %>
                                <div class="hm-tab-content" hmtab="setupRolesPermissions">
                                    <% include rolesPermissions/view_RolesPermissionsSettings %>
                                </div>
                                <% } %>
                            </div>
                        </div>
                    </div>

            </section>
        </div>
    </main>
    <!-- modals -->
    <% include leaveHolidays/modals/modal_addNewLeavesPlan %>
    <% include leaveHolidays/modals/modal_addNewHolidaysPlan %>
    <% include leaveHolidays/modals/modal_addNewHolidays %>
    <% include leaveHolidays/modals/modal_addNewLeaveType %>

    <footer>
        <% include ../../partials/footer %>
        <% include js/js_AdminSetup %>
    </footer>

        
   
</body>
</html>
